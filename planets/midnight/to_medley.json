{
    "$schema": "https://raw.githubusercontent.com/xen-42/outer-wilds-new-horizons/main/NewHorizons/Schemas/body_schema.json",
    "name": "Medley Gateway",
    "starSystem": "smallbug.MedleyOfPlanets",
    "Base": {
        "surfaceGravity": 24,
        "surfaceSize": 50,
        "hasMapMarker": true
    },
    "Orbit": {
        "isStatic": true,
        "semiMajorAxis": 15000,
        "primaryBody": "Midnight",
        "trueAnomaly": 180,
        "showOrbitLine": true
    },
    "ShipLog": {
        "xmlFile": "planets/shiplogs/to_medley.xml",
        "spriteFolder": "planets/shiplogs/sprites",
        "mapMode": {
            "revealedSprite": "planets/shiplogs/sprites/map/blackhole.png"
        }
    },
    "Props": {
        "singularities": [
            {
                "size": 100,
                "type": "blackHole",
                "pairedSingularity": "Medley Entrance"
            }
        ],
        "reveal": [
            {
                "position": {"x": 0, "y": 0, "z": 0},
                "radius": 100,
                "revealOn": "enter",
                "reveals": [
                    "to_medley_wormhole_explore"
                ]
            }
        ]
    }
}