{
    "$schema": "https://raw.githubusercontent.com/xen-42/outer-wilds-new-horizons/main/NewHorizons/Schemas/body_schema.json",
    "name": "Midnight Gateway",
    "starSystem": "smallbug.MedleyOfPlanets",
    "Base": {
        "surfaceGravity": 24,
        "surfaceSize": 50,
        "hasMapMarker": true
    },
    "Orbit": {
        "isStatic": true,
        "semiMajorAxis": 15000,
        "trueAnomaly": 300,
        "primaryBody": "Magnificence",
        "showOrbitLine": true
    },
    "ShipLog": {
        "xmlFile": "planets/shiplogs/to_midnight.xml",
        "spriteFolder": "planets/shiplogs/sprites",
        "mapMode": {
            "revealedSprite": "planets/shiplogs/sprites/map/blackhole.png"
        }
    },
    "Props": {
        "singularities": [
            {
                "size": 100,
                "type": "blackHole",
                "pairedSingularity": "Midnight Entrance"
            }
        ],
        "reveal": [
            {
                "position": {"x": 0, "y": 0, "z": 0},
                "radius": 100,
                "revealOn": "enter",
                "reveals": [
                    "to_midnight_wormhole_explore",
                    "canyon_log_rumor",
                    "bleak_log_rumor",
                    "dusk_log_rumor",
                    "midnight_wormhole_rumor",
                    "to_medley_wormhole_rumor"
                ]
            }
        ]
    }
}